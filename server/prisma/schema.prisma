generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// المستخدم المسؤول (Admin)
model AdminUser {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

// المشاريع (Projects)
model Project {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String
  content     String?  // Full Markdown content
  image       String?  // Main Cover Image
  
  // --- الإضافة الجديدة (القسم) ---
  category    String   @default("General") // تصنيف المشروع (Medical, Ecommerce, etc.)
  // -----------------------------

  // المصفوفات (Arrays)
  gallery     String[] @default([]) // صور المعرض
  tags        String[] @default([]) // تقنيات العمل (React, Node...)
  
  link        String?  // رابط المشروع الخارجي
  
  // حقول قديمة
  images      String[] @default([]) 
  url         String?  // legacy

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// الرسائل (Contact Messages)
model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// الخدمات (Services)
model Service {
  id               Int      @id @default(autoincrement())
  title            String
  slug             String?  @unique
  shortDescription String
  fullContent      String?
  icon             String?
  image            String?
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}